RewriteEngine On

# Redirect requests without language code to default language (en)
RewriteCond %{REQUEST_URI} !^/en/
RewriteCond %{REQUEST_URI} !^/nl/
RewriteRule ^(.*)$ /en/$1 [L]

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/.]+)$ $1.html [L]

# Redirect .html URLs to URLs without .html extension
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ /%1 [R=301,L]

# Handle 404 errors by redirecting to index.html if no language code is present
ErrorDocument 404 /en/index.html